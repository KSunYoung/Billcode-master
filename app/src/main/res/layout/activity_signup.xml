<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signupActivity"
    android:background="@color/white"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/pastelMint"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="아이디" />

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/SignupID"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="32dp"
                android:textSize="15sp"
                android:background="#00ffffff"
                android:hint="아이디를 입력해주세요"
                android:textColorHint="@color/darkGray" />
        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/line_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="이름" />

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/SignupName"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="32dp"
                android:textSize="15sp"
                android:background="#00ffffff"
                android:hint="이름을 입력해주세요"
                android:textColorHint="@color/darkGray" />
        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/line_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="이메일" />

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/SignupEmail"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="32dp"
                android:textSize="15sp"
                android:background="#00ffffff"
                android:hint="이메일을 입력해주세요"
                android:textColorHint="@color/darkGray" />
        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/line_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="전화번호" />

            <EditText
                android:inputType="phone"
                android:id="@+id/SignupPhone"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="32dp"
                android:textSize="15sp"
                android:background="#00ffffff"
                android:hint="전화번호를 입력해주세요"
                android:textColorHint="@color/darkGray" />
        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/line_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="생년월일" />

            <TextView
                android:inputType="none"
                android:id="@+id/SignupBirthdayClick"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="32dp"
                android:background="#00ffffff"
                android:textSize="15sp"
                android:hint="생년월일을 입력해주세요"
                android:textColorHint="@color/darkGray" />
        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/line_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="비밀번호" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/SignupPw"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="32dp"
                android:background="#00ffffff"
                android:textSize="15sp"
                android:hint="비밀번호를 입력해주세요"
                android:textColorHint="@color/darkGray" />
        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/line_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="비밀번호 확인" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/SignupPwVerify"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="32dp"
                android:background="#00ffffff"
                android:textSize="15sp"
                android:hint="비밀번호를 한번 더 입력해주세요"
                android:textColorHint="@color/darkGray" />
        </LinearLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/line_login" />

        <Button
            android:id="@+id/SignUpConfirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="#00ffffff"
            android:text="완료"
            android:textColor="@color/darkGray"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>

